<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CriarAvisoTreinador">

    <Button
            android:id="@+id/enviar"
            android:layout_width="133dp"
            android:layout_height="46dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="480dp"
            android:background="@drawable/buttonshape"
            android:text="Enviar Aviso"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textAllCaps="false"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <Button
                android:text="Log out"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"

                android:id="@+id/logout"
                style="@android:style/Widget.Material.Light.Button.Toggle"
                android:layout_marginEnd="57dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.975"
                android:layout_marginBottom="600dp" app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="12sp" android:textAllCaps="false" android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp" android:layout_below="@+id/username"/>
        <TextView
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:layout_marginTop="53dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                android:textColor="@color/colorPrimaryDark" android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginStart="243dp"/>
        <CheckBox
                android:text="sub14"
                android:layout_width="140dp"
                android:layout_height="46dp" android:id="@+id/sub14"
                android:layout_marginTop="370dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginStart="242dp" android:layout_alignParentEnd="true"
                android:layout_marginEnd="28dp"/>
        <CheckBox
                android:text="sub8"
                android:layout_width="140dp"
                android:layout_height="46dp" android:id="@+id/sub8"
                android:layout_marginTop="368dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginStart="50dp" android:layout_alignParentEnd="true"
                android:layout_marginEnd="220dp"/>
    </RelativeLayout>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:inputType="textPersonName"
            android:id="@+id/aviso"
            android:textColor="@color/colorPrimaryDark"
            tools:text="Escreva aqui o aviso que pretende enviar" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="460dp"
            app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>