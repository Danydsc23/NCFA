<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Calendario_CompTreinador">
    <TextView
            android:layout_width="114dp"
            android:layout_height="24dp"
            android:id="@+id/username"
            android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:textColor="@color/colorPrimaryDark" android:textSize="18sp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Log out"
            android:layout_width="66dp"
            android:layout_height="26dp"
            android:background="@drawable/buttonshape"

            android:id="@+id/presencas8"
            style="@android:style/Widget.Material.Light.Button.Toggle"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.93"
            android:textSize="12sp" android:textAllCaps="false" android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/username"
    />
    <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="346dp"
            android:id="@+id/calendarView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintVertical_bias="0.634"/>
</android.support.constraint.ConstraintLayout>