<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Treinador">

    <Button
            android:text="Log out"
            android:layout_width="66dp"
            android:layout_height="25dp"
            android:background="@drawable/buttonshape"

            android:id="@+id/logout"
            style="@android:style/Widget.Material.Light.Button.Toggle"
            android:textSize="12sp" android:textAllCaps="false" android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="76dp"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/back"
            android:background="@drawable/buttonshape"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Treinador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" android:textSize="40sp"
            app:layout_constraintHorizontal_bias="0.168" app:layout_constraintVertical_bias="0.057"
            android:textColor="@color/colorPrimaryDark" android:textAllCaps="false" android:textStyle="bold|italic"/>
    <Button
            android:text="Competições"
            android:layout_width="255dp"
            android:layout_height="66dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/competicao" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.27"
            app:layout_constraintVertical_bias="0.541" style="@android:style/Widget.Material.Light.Button.Toggle"
            android:textAllCaps="false" android:textColor="@color/colorPrimaryDark" android:textSize="24sp"/>
    <Button
            android:text="Informações"
            android:layout_width="255dp"
            android:layout_height="66dp"
            android:background="@drawable/buttonshape"

            android:id="@+id/info" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.271"
            app:layout_constraintVertical_bias="0.755" style="@android:style/Widget.Material.Light.Button.Toggle"
            android:textColor="@color/colorPrimaryDark" android:textSize="24sp" android:textAllCaps="false"/>
    <Button
            android:text="Treinos"
            android:layout_width="255dp"
            android:layout_height="68dp"
            android:background="@drawable/buttonshape"

            android:id="@+id/tre" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.293"
            app:layout_constraintVertical_bias="0.317" style="@android:style/Widget.Material.Light.Button.Toggle"
            android:textAllCaps="false" android:textColor="@color/colorPrimaryDark" android:textSize="24sp"/>
    <TextView
            android:layout_width="114dp"
            android:layout_height="28dp"
            android:id="@+id/username"
            android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:textColor="@color/colorPrimaryDark" android:textSize="18sp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>